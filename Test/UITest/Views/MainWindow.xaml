<Window x:Class="UITest.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        Title="{Binding Title}"
        Width="525"
        Height="350"
        prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel Orientation="Vertical">
        <TextBlock Height="20" Margin="5,0" Text="ステータスバー" />
        <Button Height="20" Command="{Binding ChangeStatusBarCommand}" Content="変更" />
        <ContentControl Height="20" prism:RegionManager.RegionName="StatusBarRegion" Background="AliceBlue" />
    </StackPanel>
</Window>
