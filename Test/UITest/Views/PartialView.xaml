<UserControl x:Class="UITest.Views.PartialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             d:DesignHeight="300"
             d:DesignWidth="300"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type Run}">
            <Setter Property="FontSize" Value="15" />
        </Style>
    </UserControl.Resources>
    <StackPanel Background="#FFFFFF">
        <TextBlock Text="この画面は、テスト用です。" />
        <TextBlock><Run>入力されたキャラクター名:</Run><Run Text="{Binding Path=SelectedCharacter.Name, Mode=OneWay}" /></TextBlock>
        <TextBlock><Run>入力された読み:</Run><Run Text="{Binding Path=SelectedCharacter.Reading, Mode=OneWay}" /></TextBlock>
        <TextBlock><Run>入力された声優:</Run><Run Text="{Binding Path=SelectedCharacter.VoiceActor.DisplayName, Mode=OneWay}" /></TextBlock>
    </StackPanel>
</UserControl>
